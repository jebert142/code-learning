@model PartyInvites.Models.GuestResponse

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="~/Content/Styles.css" />
    <title>RsvpForm</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary()
        <p class="field-validation-error field-validation-valid">Your name: @Html.TextBoxFor(x => x.Name)</p>
        <p class="field-validation-error field-validation-valid">Your email: @Html.TextBoxFor(x => x.Email)</p>
        <p class="field-validation-error field-validation-valid">Your Phone: @Html.TextBoxFor(x => x.Phone)</p>
        <p class="input-validation-error validation-summary-errors validation-summary-valid">
            Will you attend?
            @Html.DropDownListFor(x => x.WillAttend, new[]
       {
           new SelectListItem() {Text = "Yes, I'll be there" ,
                Value = bool.TrueString},
           new SelectListItem() {Text = "No, I can't come" ,
                Value = bool.FalseString }
       }, "Choose and option" )
        </p>
        <input type="submit" value="Submit RSVP"/>
    }
</body>
</html>